[Unit]
Description=WashDB Business Verification Service
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
User=rivercityscrape
Group=rivercityscrape
WorkingDirectory=/home/rivercityscrape/URL-Scrape-Bot/washdb-bot
Environment=PATH=/home/rivercityscrape/URL-Scrape-Bot/washdb-bot/venv/bin:/usr/local/bin:/usr/bin:/bin
ExecStart=/home/rivercityscrape/URL-Scrape-Bot/washdb-bot/venv/bin/python scripts/verification_service.py --workers 4
Restart=always
RestartSec=30
StandardOutput=append:/home/rivercityscrape/URL-Scrape-Bot/washdb-bot/logs/verification_service.log
StandardError=append:/home/rivercityscrape/URL-Scrape-Bot/washdb-bot/logs/verification_service.log

[Install]
WantedBy=multi-user.target
